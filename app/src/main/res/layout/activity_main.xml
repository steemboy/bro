<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <WebView
            android:id="@+id/webview"
            android:layout_above="@id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/list_lay"
            android:onClick="onClick"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/tgray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/card">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorites"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/card"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:paddingBottom="3dp">
            <ProgressBar
                android:id="@+id/progressBar"
                android:progressDrawable="@drawable/web_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:indeterminate="false"/>
            <RelativeLayout
                android:id="@+id/holder"
                android:layout_below="@id/progressBar"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/count_lay"
                    android:onClick="onClick"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        app:cardCornerRadius="3dp"
                        app:cardBackgroundColor="@color/gray"
                        app:contentPadding="2dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/counter_border"
                            app:cardCornerRadius="2dp"
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/count"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textColor="@color/gray"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/lay_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/count_lay"
                    android:background="@android:color/transparent">
                    <EditText
                        android:id="@+id/url"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Введите адрес или поисковый запрос"
                        android:textSize="15sp"
                        android:inputType="textUri"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/clear_url"
                        android:onClick="onClick"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_clear"
                        android:tint="@color/gray" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/lay_tabs"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/count_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:id="@+id/add_tab"
                        android:onClick="onClick"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/ic_add"
                        android:scaleType="fitCenter"
                        android:tint="@color/gray"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/clear_tabs"
                        android:onClick="onClick"
                        android:src="@drawable/ic_clear_all"
                        android:scaleType="fitCenter"
                        android:tint="@color/gray"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_title"
                    android:onClick="onClick"
                    android:layout_toEndOf="@+id/count_lay"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/etitle"
                        android:onClick="onClick"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/refresh"
                        android:onClick="onClick"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_refresh"
                        android:tint="@color/gray"
                        android:scaleType="fitCenter"
                        android:layout_width="35dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/right_view"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_gravity="end"
        android:focusable="true"
        android:clickable="true"
        android:fillViewport="true"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/go_back"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_forward"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:rotation="180"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_share"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/switch_agent"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_computer"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/to_favorite"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star_off"
                android:scaleType="fitCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>